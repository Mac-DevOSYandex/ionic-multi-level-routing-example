{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@ig/*": ["app/*"],
            "@core/*": ["app/core/*"],
            "@state/*": ["app/states/*"],
            "@pages/*": ["app/pages/*"],
            "@providers/*": ["app/providers/*"],
            "@theme/*": ["theme/*"],
            "@assets/*": ["assets/*"],
            "@env": ["environments/*"]
        }
    },
    "exclude": ["test.ts", "**/*.spec.ts"]
}
